<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
        android:id="@+id/tvNomActivitat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom de l'activitat: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHoraInici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora d'Inici: "
        android:textSize="16sp"
        android:layout_below="@id/tvDataClasse"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvEstatClasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estat de la classe: "
        android:textSize="16sp"
        android:layout_below="@id/tvHoraInici"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnMesDetalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÃ©s detalls"
        android:layout_marginTop="18dp"
        android:layout_gravity="center"/>


</LinearLayout>

    </androidx.cardview.widget.CardView>