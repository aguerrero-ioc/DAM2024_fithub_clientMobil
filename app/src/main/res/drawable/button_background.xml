<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del botón cuando está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722"/> <!-- Color de fondo cuando está presionado -->
            <corners android:radius="8dp"/> <!-- Radio de las esquinas -->
        </shape>
    </item>
    <!-- Fondo del botón cuando no está presionado (estado por defecto) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- Color de fondo por defecto -->
            <corners android:radius="8dp"/> <!-- Radio de las esquinas -->
        </shape>
    </item>
</selector>
